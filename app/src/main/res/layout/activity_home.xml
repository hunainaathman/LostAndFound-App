<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
tools:context="com.example.hunaina.lostandfound.Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffff"
        android:weightSum="1">

    <ImageView
        android:layout_width="124sp"
        android:layout_height="124sp"
        android:id="@+id/icon"
        android:src="@drawable/icon"
        android:height="180sp"
        android:width="180sp"
        android:layout_marginTop="30dp"
        tools:src="@drawable/icon"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="WELCOME"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/wlc"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffff"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:text="Register Lost Items"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="16dp"
            android:textColor="#f40000"
            android:id="@+id/txtli"
            android:drawableRight="@drawable/ic_border_color_black_24dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/wlc"
            android:background="#fff"
            />

        <TextView
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:text="Report Found Items"
            android:textSize="16dp"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#0a7e15"
            android:drawableRight="@drawable/ic_description_black_24dp"
            android:id="@+id/txtfi"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/wlc"
            android:background="#fff"
            android:layout_marginBottom="10dp"
             />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffff"
            android:gravity="center_horizontal"

            android:weightSum="1">
        <TextView
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:text="Retrieve Lost Items"
            android:textSize="16dp"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#f2d51a"
            android:background="#fff"
            android:drawableRight="@drawable/ic_vertical_align_bottom_black_24dp"
            android:id="@+id/txttv"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/btnrg"
            android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:text="FAQS"
                android:textColor="#07d1ca"
                android:background="#fff"
                android:textSize="16dp"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawableRight="@drawable/ic_help_outline_black_24dp"
                android:id="@+id/txtfaq"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/btnrg"
                android:layout_marginTop="10dp"/>

            </LinearLayout>
    </LinearLayout>
</RelativeLayout>
